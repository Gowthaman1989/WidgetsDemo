<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.gowtham.widgetsdemo.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="132dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="189dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="189dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Student Name"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="134dp"
        android:layout_height="39dp"
        android:layout_marginBottom="356dp"
        android:layout_marginTop="8dp"
        android:text="Date of Birth"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.636" />


    <EditText
        android:id="@+id/ed_sname"
        android:layout_width="188dp"
        android:layout_height="47dp"
        android:layout_marginLeft="39dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="enter the name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="8dp"
        tools:layout_editor_absoluteY="29dp"
        tools:layout_editor_absoluteX="179dp" />

    <EditText
        android:id="@+id/et_DOB"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="368dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="date"
        android:hint="enter the DOB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_sname"
        app:layout_constraintVertical_bias="0.8" />


    <CheckBox
        android:id="@+id/SSLC"
        android:layout_width="66dp"
        android:layout_height="29dp"
        android:layout_marginBottom="271dp"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="25dp"
        android:text="SSLC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <CheckBox
        android:id="@+id/HSSC"
        android:layout_width="66dp"
        android:layout_height="29dp"
        android:layout_marginBottom="271dp"
        android:layout_marginStart="37dp"
        android:text="HSSC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/SSLC"
        android:layout_marginLeft="20dp" />

    <CheckBox
        android:id="@+id/UG"
        android:layout_width="66dp"
        android:layout_height="29dp"
        android:layout_marginBottom="271dp"
        android:layout_marginStart="15dp"
        android:text="UG"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/HSSC"
        android:layout_marginLeft="22dp" />

    <ToggleButton
        android:id="@+id/tg_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="ToggleButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="71dp" />

    <Spinner
        android:id="@+id/sp_course"
        android:layout_width="135dp"
        android:layout_height="32dp"
        android:hint="Select Course"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.564"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="201dp"
        android:text="submit"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="96dp"
        app:layout_constraintLeft_toRightOf="@+id/sp_course"
        android:layout_marginLeft="94dp" />

    <CheckBox
        android:id="@+id/PG"
        android:layout_width="66dp"
        android:layout_height="29dp"
        android:layout_marginRight="8dp"
        android:text="PG"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toRightOf="@+id/UG"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.192"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="271dp" />

    <RadioGroup
        android:id="@+id/gender"
        android:layout_width="360dp"
        android:layout_height="43dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.294"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_marginBottom="295dp"
            android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.08"
            android:text="Male"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.363" />

        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="0.32"
            android:text="Female"
            tools:layout_editor_absoluteX="280dp"
            tools:layout_editor_absoluteY="163dp" />

    </RadioGroup>

    <TextView
        android:id="@+id/data_view"
        android:layout_width="128dp"
        android:layout_height="68dp"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/sp_course"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/retrieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retrieve"
        app:layout_constraintLeft_toRightOf="@+id/data_view"
        android:layout_marginLeft="89dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/submit"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.09" />


</android.support.constraint.ConstraintLayout>
